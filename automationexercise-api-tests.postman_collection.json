					"name": "all products list",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Codigo de respuesta es 200\", () => {\r",
									"    pm.response.to.have.status(200);\r",
									"});\r",
									"\r",
									"pm.test(\"Productos existen en el array\", function () {\r",
									"    let jsonData = pm.response.json();\r",
									"    pm.expect(jsonData).to.have.property(\"products\");\r",
									"    pm.expect(jsonData.products.length).to.be.above(0); // al menos 1 producto\r",
									"});\r",
									"\r",
									"pm.test(\"Estructura de productos correcta\", function () {\r",
									"    let jsonData = pm.response.json();\r",
									"    jsonData.products.forEach(product => {\r",
									"        pm.expect(product).to.have.property(\"id\");\r",
									"        pm.expect(product).to.have.property(\"name\");\r",
									"        pm.expect(product).to.have.property(\"price\");\r",
									"\r",
									"        // Opcional: validar tipos de datos\r",
									"        pm.expect(product.id).to.be.a(\"number\");\r",
									"        pm.expect(product.name).to.be.a(\"string\");\r",
									"        pm.expect(product.price).to.be.a(\"string\");\r",
									"    });\r",
									"\r",
									"    pm.test(\"IDs de productos son únicos\", function () {\r",
									"    let jsonData = pm.response.json();\r",
									"    let ids = jsonData.products.map(p => p.id);\r",
									"    let uniqueIds = [...new Set(ids)];\r",
									"    pm.expect(ids.length).to.eql(uniqueIds.length);\r",
									"});\r",
									"});\r",
									"\r",
									""
								],
								"type": "text/javascript"
							}
